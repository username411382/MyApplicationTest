<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_all_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/comment_img_id"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/image" />
        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf ="@+id/comment_img_id"
            android:textSize="16sp"
            android:textColor ="@color/black"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/comment_chl_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor ="@color/black"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toLeftOf = "@+id/comment_chl_name"
            android:textSize="16sp"
            android:textColor ="@color/black"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black"
        android:paddingBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comment_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="\t\t评论内容"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/comment_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="\t\t时间"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
